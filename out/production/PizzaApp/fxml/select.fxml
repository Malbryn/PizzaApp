<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleGroup?>
<?import sample.model.PizzaStyle?>
<?import sample.model.PizzaSize?>
<?import sample.model.PizzaType?>
<?import sample.model.PizzaExtra?>

<?import javafx.scene.text.Text?>
<VBox stylesheets="/css/style.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controllers.Select"
      fx:id="container">
    <children>
        <Label fx:id="title1" text="Pizza kiválasztása"/>
        <HBox styleClass="boxRows">
            <children>
                <VBox styleClass="boxColumn">
                    <children>
                        <Label fx:id="style" text="Tészta"/>
                        <fx:define>
                            <ToggleGroup fx:id="groupStyle"/>
                        </fx:define>
                        <RadioButton fx:id="styleThin" toggleGroup="$groupStyle" text="Vékony tészta">
                            <userData>
                                <PizzaStyle fx:constant="THIN"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="styleThick" toggleGroup="$groupStyle" text="Vastag tészta">
                            <userData>
                                <PizzaStyle fx:constant="THICK"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="styleStuffed" toggleGroup="$groupStyle" text="Sajttal töltött">
                            <userData>
                                <PizzaStyle fx:constant="STUFFED_CRUST"/>
                            </userData>
                        </RadioButton>
                    </children>
                </VBox>
                <VBox styleClass="boxColumn">
                    <children>
                        <Label fx:id="size" text="Méret"/>
                        <fx:define>
                            <ToggleGroup fx:id="groupSize"/>
                        </fx:define>
                        <RadioButton fx:id="sizeSmall" toggleGroup="$groupSize" text="Kicsi">
                            <userData>
                                <PizzaSize fx:constant="SMALL"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="sizeMedium" toggleGroup="$groupSize" text="Közepes">
                            <userData>
                                <PizzaSize fx:constant="MEDIUM"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="sizeLarge" toggleGroup="$groupSize" text="Nagy">
                            <userData>
                                <PizzaSize fx:constant="LARGE"/>
                            </userData>
                        </RadioButton>
                    </children>
                </VBox>
                <VBox styleClass="boxColumn">
                    <children>
                        <Label fx:id="type" text="Típus"/>
                        <fx:define>
                            <ToggleGroup fx:id="groupType"/>
                        </fx:define>
                        <RadioButton fx:id="typeMargherita" toggleGroup="$groupType" text="Margaréta">
                            <userData>
                                <PizzaType fx:constant="MARGHERITA"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="typePepperoni" toggleGroup="$groupType" text="Szalámis">
                            <userData>
                                <PizzaType fx:constant="PEPPERONI"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="typeMeat" toggleGroup="$groupType" text="Húsimádó">
                            <userData>
                                <PizzaType fx:constant="MEAT"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="typeBBQ" toggleGroup="$groupType" text="BBQ">
                            <userData>
                                <PizzaType fx:constant="BBQ"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="typeHawaiian" toggleGroup="$groupType" text="Hawaii">
                            <userData>
                                <PizzaType fx:constant="HAWAIIAN"/>
                            </userData>
                        </RadioButton>
                        <RadioButton fx:id="typeMushroom" toggleGroup="$groupType" text="Gombás">
                            <userData>
                                <PizzaType fx:constant="MUSHROOM"/>
                            </userData>
                        </RadioButton>
                    </children>
                </VBox>
                <VBox styleClass="boxColumn">
                    <children>
                        <Label fx:id="extra" text="Extra feltét"/>
                        <CheckBox fx:id="extraPepperoni" text="Szalámi">
                            <userData>
                                <PizzaExtra fx:constant="PEPPERONI"/>
                            </userData>
                        </CheckBox>
                        <CheckBox fx:id="extraBacon" text="Bacon">
                            <userData>
                                <PizzaExtra fx:constant="BACON"/>
                            </userData>
                        </CheckBox>
                        <CheckBox fx:id="extraOlives" text="Olívabogyó">
                            <userData>
                                <PizzaExtra fx:constant="OLIVES"/>
                            </userData>
                        </CheckBox>
                        <CheckBox fx:id="extraHam" text="Sonka">
                            <userData>
                                <PizzaExtra fx:constant="HAM"/>
                            </userData>
                        </CheckBox>
                        <CheckBox fx:id="extraCheese" text="Sajt">
                            <userData>
                                <PizzaExtra fx:constant="CHEESE"/>
                            </userData>
                        </CheckBox>
                        <CheckBox fx:id="extraOnion" text="Hagyma">
                            <userData>
                                <PizzaExtra fx:constant="ONION"/>
                            </userData>
                        </CheckBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox styleClass="boxColumn">
            <children>
                <Label text="Kosár:"/>
                <ListView fx:id="itemList"/>
            </children>
        </VBox>
        <HBox styleClass="buttons">
            <children>
                <Button fx:id="btnBack" text="Vissza" onAction="#handleBack"/>
                <Button fx:id="btnCart" text="Kosárhoz hozzáad" onAction="#addToCart"/>
                <Button fx:id="btnOrder" text="Tovább" onAction="#handleOrderPage"/>
            </children>
        </HBox>
        <HBox styleClass="total">
            <children>
                <Text text="Összesen: "/>
                <Text fx:id="total" text="0"/>
                <Text text="Ft"/>
            </children>
        </HBox>
    </children>
</VBox>